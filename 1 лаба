#include <iostream>   // Подключаем библиотеку для ввода и вывода 
#include <clocale>    // Подключаем библиотеку для работы с локалями 

int main() {          // Главная функция программы

    setlocale(LC_ALL, "Russian"); 
    // Устанавливаем русскую локаль

    std::cout << "First string" << std::endl;
    // Выводим строку "First string" в консоль и переходим на новую строку

    std::cout << "Первая строка\nВторая строка" << std::endl;
    // Выводим сразу две строки, и для новой строки \n

    std::cout << "Спецсимволы \"\\\"" << std::endl;
    // Выводим строку со спецсимволами
    return 0;         
    // Завершаем выполнение программы и возвращаем 0 (успешное завершение)

}                    


#include <clocale>
#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    // Создаём переменную типа int со значением 150
    int intVar = 150;

    // Создаём переменную типа float
    float floatVar = 15.933;

    // Создаём переменную используя тип, занимающий минимум памяти (unsigned char подходит, так как 250 укладывается в диапазон 0-255)
    unsigned char byteVar = 250;

    // Выводим все переменные в формате «ИМЯ ПЕРЕМЕННОЙ = ЗНАЧЕНИЕ»
    cout << "intVar = " << intVar << endl;
    cout << "floatVar = " << floatVar << endl;
    cout << "byteVar = " << byteVar << endl;

    // Создаём три переменные для дня, месяца (строка) и года
    int day = 15;           // день рождения (целое число)
    string month = "Май";   // месяц рождения (строка)
    int year = 1990;        // год рождения (целое число)

    // Выводим переменные в формате «Моя дата рождения: ДЕНЬ МЕСЯЦ ГОД года»
    cout << "Моя дата рождения: " << day << " " << month << " " << year << " года" << endl;

    // Создаём две константы: число 2.3 (float) и строку "WINDOWS" (const string)
    const float constantFloat = 2.3;
    const string constantString = "WINDOWS";

    // Выводим значения констант через пробел
    cout << constantFloat << " " << constantString << endl;

}
