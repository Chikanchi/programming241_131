#include <iostream>   // Подключаем библиотеку для ввода и вывода (cout)
#include <clocale>    // Подключаем библиотеку для работы с локалями (setlocale)

int main() {          // Главная функция программы, с неё начинается выполнение

    setlocale(LC_ALL, "Russian"); 
    // Устанавливаем русскую локаль, чтобы корректно выводить русский текст

    std::cout << "First string" << std::endl;
    // 1. Выводим строку "First string" в консоль и переходим на новую строку

    std::cout << "Первая строка\nВторая строка" << std::endl;
    // 2. Выводим сразу две строки на русском языке, используя символ новой строки \n

    std::cout << "Спецсимволы \"\\\"" << std::endl;
    // 4. Выводим строку со спецсимволами:
    // \" — экранированные кавычки
    // \\ — экранированный обратный слеш

    return 0;         
    // Завершаем выполнение программы и возвращаем 0 (успешное завершение)

}                     // Закрывающая фигурная скобка функции main




#include <clocale>
#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    // 1. Создаём переменную типа int со значением 150
    int intVar = 150;

    // 2. Создаём переменную типа float со значением 15,933
    float floatVar = 15.933;

    // 3. Создаём переменную со значением 250, используя тип, занимающий минимум памяти (unsigned char подходит, так как 250 укладывается в диапазон 0-255)
    unsigned char byteVar = 250;

    // 4. Выводим все переменные в консоль в формате «ИМЯ ПЕРЕМЕННОЙ = ЗНАЧЕНИЕ»
    cout << "intVar = " << intVar << endl;
    cout << "floatVar = " << floatVar << endl;
    cout << "byteVar = " << byteVar << endl;

    // 5. Создаём три переменные для дня, месяца (строка) и года
    int day = 15;           // день рождения (целое число)
    string month = "Май";   // месяц рождения (строка)
    int year = 1990;        // год рождения (целое число)

    // 6. Выводим переменные в формате «Моя дата рождения: ДЕНЬ МЕСЯЦ ГОД года»
    cout << "Моя дата рождения: " << day << " " << month << " " << year << " года" << endl;

    // 7. Создаём две константы: число 2.3 (float) и строку "WINDOWS" (const string)
    const float constantFloat = 2.3;
    const string constantString = "WINDOWS";

    // 8. Выводим значения констант через пробел
    cout << constantFloat << " " << constantString << endl;

}
