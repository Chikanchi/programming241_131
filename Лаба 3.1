#include <iostream>
using namespace std;

int main() {
    // 1. Создаём переменную со значением 
    int myVar = 42;
    
    // 2. Объявляем указатель на созданную переменную
    // int* — тип указателя (указатель на int)
    // ptrToVar — имя указателя
    // &myVar — оператор «взятия адреса»: получаем адрес переменной myVar
    int* ptrToVar = &myVar;
    
    // 3. Выводим в консоль:
    cout << "Адрес переменной myVar: " << ptrToVar << endl;
    cout << "Значение по этому адресу: " << *ptrToVar << endl;
    // *ptrToVar — операция «разыменования»: берём значение по адресу из ptrToVar
    
    // 4. Изменяем значение по адресу, на который указывает ptrToVar
    *ptrToVar = 100;
    
    // 5. Проверяем, изменилось ли значение myVar
    cout << "Теперь myVar = " << myVar << endl;
    // Вывод: 100 — значит, myVar действительно изменился через указатель
    
    // 6. Создаём массив из нескольких элементов
    int arr[] = {10, 20, 30, 40, 50};
    int arrSize = 5; 
    
    // 7. Выводим все элементы массива, используя указатель
    int* ptr = arr;  // указатель ptr указывает на первый элемент массива
    cout << "Элементы массива: ";
    for (int i = 0; i < arrSize; i++) {
        cout << *ptr << " ";  // выводим значение по текущему адресу
        ptr++;  // сдвигаем указатель на следующий элемент
    }
    cout << endl;
    
    // 8. Объявляем целую переменную со значением 5
    int num = 5;
    
    // 9. Создаём указатель, который: не может менять адрес (константный указатель), может менять значение по этому адресу
    int* const ptrToNum = &num;
    
    // а) Попытка поменять адрес (будет ошибка компиляции)
    // ptrToNum = &myVar;  // ОШИБКА: нельзя изменить константный указатель!
    
    // б) Меняем значение через указатель
    *ptrToNum = 999;
    cout << "Теперь num = " << num << endl;  // Вывод: 999
    
}
