#include <iostream>
#include <string>
#include <regex>

using namespace std;

int main() {
    string name;
    cout << "Введите имя: (на латинице)";
    cin >> name;

    // создаем шаблон регулярного выражения
    regex nameRegex("^[A-Z][a-zA-Z]{1,31}$");
    // проверка строки на соответствие регулярному выражению
    if (regex_match(name, nameRegex)) {
        cout << "Имя корректно" << endl;
    } else {
        cout << "Имя некорректно" << endl;
    }

    string text = "Напишите на test@example.com, support@domain.ru или info123@mail.com для связи.";

    regex emailRegex("[\\w\\.]+@[\\w\\.]+\\.[a-zA-Z]{2,}");
    // хранение совпадений по выражению
    smatch matches;
    string temp = text;

    cout << "Найденные e-mail адреса:" << endl;
    while (regex_search(temp, matches, emailRegex)) {
        cout << matches[0] << endl;
        temp = matches.suffix().str();
    }

    return 0;
}
